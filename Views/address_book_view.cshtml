<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Address Book</title>
  </head>
  <body>
    <h1>View contacts</h1>

    @foreach(var contact in Model)
    {
      <li>@contact.GetName()</li>
      <li>@contact.GetAddress()</li>
      <li>@contact.GetPhoneNumber()</li>
    }
    <br>
    <br>

    <form action="/address_book_add" method="get">
      <button type="submit">Add a new contact</button>
    </form>

    <br>
    <br>

    <form action="/contacts_deleted" method="post">
      <button type="submit" name="button">Clear all contacts</button>
    </form>

    <br>
    <br>

    <form action="/" method="get">
      <button type="submit">Return to main page</button>
    </form>

  </body>
</html>
